    <fragment
        android:id="@+id/myMusicFragment"
        android:name="com.xiyoumusic.app.fragment.MyMusicFragment"
        android:label="fragment_my_music"
        tools:layout="@layout/fragment_my_music" />
    <fragment
        android:id="@+id/myGuanzhuFragment"
        android:name="com.xiyoumusic.app.fragment.MyGuanzhuFragment"
        android:label="fragment_my_guanzhu"
        tools:layout="@layout/fragment_my_guanzhu" />
    <fragment
        android:id="@+id/dongtaiFragment"
        android:name="com.xiyoumusic.app.fragment.DongtaiFragment"
        android:label="fragment_dongtai"
        tools:layout="@layout/fragment_dongtai" />
